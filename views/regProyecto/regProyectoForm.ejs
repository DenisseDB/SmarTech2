<%- include('../templates/head.ejs') %>


<form action="/registrarProyecto/nuevo" method="POST" class="regTareaForm"> 
  
  <h3 class="fecha">FECHA: 
    <%= new Date().getDay(); %> /
    <%= new Date().getMonth(); %> /
    <%= new Date().getFullYear(); %> 
  </h3>


  <h1 class="crearTarea">Crear Proyecto</h1>

  <div class="contenedorTarea">

    <div class="field is-horizontal">
      <div class="field-label is-normal">
        <label class="label">Nombre del proyecto</label>
      </div>
      <div class="field-body">
        <div class="field">
          <div class="control">
            <input class="input" type="text" placeholder="Escribe aqui" id="nombreProyecto" name="nombreProyecto">
          </div>
          <p class="help is-danger">
            This field is required
          </p>
        </div>
      </div>
    </div>

  


  <div class="field is-horizontal">
    <div class="field-label is-normal">
      <label class="label">Descripcion</label>
    </div>
    <div class="field-body">
      <div class="field">
        <div class="control">
          <input class="input" type="text" placeholder="Escribe aqui" id="descripcion" name="descripcion">
        </div>
      </div>
    </div>
  </div>

  <div class="field is-horizontal">
    <div class="field-label is-normal">
      <label class="label">Estatus</label>
    </div>
    <div class="field-body">
      <div class="field">
        <div class="control">
          <input class="input" type="text" placeholder="Escribe aqui" id="estatus" name="estatus">
        </div>
      </div>
    </div>
  </div>


  <div class="field is-horizontal">
    <div class="field-label is-normal">
      <label class="label">Colaboradores</label>
    </div>
    <div class="field-body">
      <div class="field is-narrow">
        <div class="control">
          <%- nombreSesion %>
        </br>
          <div class="select is-fullwidth"> 
            <select name="nombre" id="nombre"> 
              <option value="" disabled selected> Selecciona a los colaboradores</option>
              <% for (let e of empleado) { %>
                <option value ="<%= e.idEmpleado %>"><%= e.nombre%></option>
              <% } %>
            </select>
            <a class="button is-link is-outlined botonAgregarColaborador"> + </a>
          </div>
        </div>
      </div>
    </div>
  </div>




  <!-- <div class="divColaboradores" id="listaColabradores">
  </div> -->


  <div class="field is-horizontal">
    <div class="field-label is-normal">
      <label class="label">Stack Tecnol√≥gico</label>
    </div>
    <div class="field-body">
      <div class="field">
        <div class="control">
          <input class="input" type="text" placeholder="Escribe aqui" id="stackTecnologico" name="stackTecnologico">
        </div>
      </div>
    </div>
  </div>

  <div class="field is-horizontal">
    <div class="field-label is-normal">
      <label class="label">Stakeholders</label>
    </div>
    <div class="field-body">
      <div class="field">
        <div class="control">
          <input class="input" type="text" placeholder="Escribe aqui" id="stakeholders" name="stakeholders">
        </div>
      </div>
    </div>
  </div>



  <div class="field is-grouped is-grouped-centered">
    <p class="control">
      <input type="submit"  value="Agregar"  class="button botonAgregarTarea is-success is-outlined">
    </p>
    
    <p class="control">
      <input type="reset" value="Cancelar" class="button botonCancelarTarea is-danger is-outlined" >
    </p>
  </div>
  </div>
 </form>

  <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
</div>