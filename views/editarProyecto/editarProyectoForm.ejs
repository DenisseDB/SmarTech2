<h1 class="titulo">Editar Proyecto</h1>

<input value="<%= proyecto[0].idProyecto %>" type="hidden" id="idProyecto">
<div class="contenedorProyecto">
  <div class="field is-horizontal">
    <div class="field-label is-normal">
      <label class="label">Nombre del proyecto</label>
    </div>
    <div class="field-body">
      <div class="field">
        <div class="control">
          <input value="<%= proyecto[0].nombreP %>"class="input" type="text" placeholder="Escribe aqui" id="nombreP" name="nombreP">
        </div>
      </div>
    </div>
  </div>

  <div class="field is-horizontal">
    <div class="field-label is-normal">
      <label class="label">Descripción</label>
    </div>
    <div class="field-body">
      <div class="field">
        <div class="control">
          <input value="<%=proyecto[0].descripcion %>"class="input" type="text" placeholder="Escribe aqui" id="descripcion" name="descripcion">
        </div>
      </div>
    </div>
  </div>

  <div class="field is-horizontal">
    <div class="field-label is-normal">
      <label class="label">Estatus</label>
    </div>
    <div class="field-body">
      <div class="field">
        <div class="control">
          <input value= "<%= proyecto[0].estatus %>"class="input" type="text" placeholder="Escribe aqui" id="estatus" name="estatus">
        </div>
      </div>
    </div>
  </div>


  <div class="field is-horizontal">
    <div class="field-label is-normal">
      <label class="label">Colaboradores</label>
    </div>
    <div class="field-body">
      <div class="field is-narrow">
        <div class="control">
          <%= nombreSesion %>
        </br>

        <div class="label" >
          <div class="row">
            <label class="label">Colaboradores Registrados: </label>
          </div>
          <ul id="listaColabsRegistrados">
            <% for (let p of proyecto) { %>
              <li><%= p.nombre %> <a href="/proyecto/eliminar/<%= p.idProyecto %>"><img src="../../media/borrar.png" id="borrarColabEditProyecto"></a></li>
            <% } %>
          </ul>
        </div>

          <div class="select is-fullwidth"> 
            <select name="nombre" id="nombre"> 
              <option value="" disabled selected> Selecciona a los colaboradores</option>
              <% for (let e of empleado) { %>
                <% if (e.idEmpleado != idSesion){ %>
                  <option value ="<%= e.idEmpleado %>"><%= e.nombre %></option>                       
                <% } %>
              <% } %>
            </select><a class="button is-link is-outlined botonAgregarColabProyecto" id="agregarColaborador"> + </a>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <!-- desplegar los compañeros-->
  <div class="divColaboradores" id="listaColabradores">
  </div>


  <div class="field is-horizontal">
    <div class="field-label is-normal">
      <label class="label">Stack Tecnológico</label>
    </div>
    <div class="field-body">
      <div class="field">
        <div class="control">
          <input value="<%= proyecto[0].stackTecnologico %>"class="input" type="text" placeholder="Escribe aqui" id="stackTecnologico" name="stackTecnologico">
        </div>
      </div>
    </div>
  </div>

  <div class="field is-horizontal">
    <div class="field-label is-normal">
      <label class="label">Stakeholders</label>
    </div>
    <div class="field-body">
      <div class="field">
        <div class="control">
          <input value="<%= proyecto[0].stakeholders %>"class="input" type="text" placeholder="Escribe aqui" id="stakeholders" name="stakeholders">
        </div>
      </div>
    </div>
  </div>

  <div class="field is-grouped is-grouped-centered">
    <p class="control">
      <input type="submit" onclick="postProyectoEditado()" value="Modificar"  id= "submitbtn"
      class="button botonAgregarTarea is-success is-outlined">
    </p>
  </div>
</div>
<script src="/js/scriptRegProyecto.js"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>