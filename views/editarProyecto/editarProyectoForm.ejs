
<input value="<%= proyecto[0].idProyecto %>" type="hidden" id="idProyecto">
<div class="editarProyecto">
  <div class="field is-horizontal">
    <h1 class="titulo">Editar Proyecto</h1>
  </div>
    <form action="" method="POST">
      <div class="field is-horizontal">
        <div class="field-label ">
          <label class="label">Nombre del Proyecto</label>
        </div>
        <div class="field-body">
          <div class="field">
            <div class="control">
              <input value="<%= proyecto[0].nombreP%>" class="input" type="text"  id="nombreP" name="nombreP" placeholder="Dynamic">
            </div>
          </div>
        </div>
      </div>

      <div class="field is-horizontal">
        <div class="field-label">
          <label class="label">Descripción</label>
        </div>
        <div class="field-body">
          <div class="field">
            <div class="control">
              <input value="<%= proyecto[0].descripcion %>"class="input" type="text"  id="descripcion" name="descripcion" placeholder="Construcción de sistema web" >
            </div>
          </div>
        </div>
      </div>

      <div class="field is-horizontal">
        <div class="field-label">
          <label class="label">Estatus</label>
        </div>
        <div class="field-body">
          <div class="field">
            <div class="control select is-fullwidth">
              <select  id="estatus" name="estatus" required>
                  <option value= "<%= proyecto[0].estatus %>" selected disabled>Selecciona un estatus</option>
                  <option value= "Estabilizacion" >Estabilización</option>
                  <option value= "Ejecucion" >Ejecución</option>
                  <option value= "Definicion" >Definición</option>
                  <option value= "Pausado" >Pausado</option>
              </select>
            </div>
          </div>
        </div>
      </div>
      
      <div class="field-label">
        <div class="label" >
          <div class="row">
            <label class="label">Colaboradores Registrados: </label>
          </div>
          <ul id="listaColabsRegistrados">
            <% for (let p of proyecto) { %>
              <li class="listaCollabs"><%= p.nombre %> 
                <% if( proyecto.length > 1) { %>
                  <a href="/proyecto/eliminar/<%= p.ID %>"><img src="../../media/menos.png" id="borrarColab"></a> 
                <% } %>
                </li>
            <% } %>
          </ul>
        </div>
        <div class="label" >
          <div class="row">
            <label class="label">Agregar Colaboradores: </label>
          </div>
          <div id="cajaColabs">
            <ul class="is-fullwidth" id="agregarColaboradores">
              <% for (let e of empleado) { %>
                <li class="listaCollabs"><%= e.nombre %> 
                    <a href="/proyecto/asignar/<%= proyecto[0].idProyecto %>/empleado/<%= e.idEmpleado %>"><img src="../../media/mas.png" id="addColab"></a>  <!-- AGREGAR ESTO A PROYECTO-->
                </li>
              <% } %>
            </ul>
          </div>
        </div>
      </div>
      
      <br>
      <div class="field is-horizontal">
        <div class="field-label is-normal">
          <label class="label">Stack Tecnológico</label>
        </div>
        <div class="field-body">
          <div class="field">
            <div class="control">
              <input value="<%= proyecto[0].stackTecnologico %>"class="input" type="text"  id="stackTecnologico" name="stackTecnologico" placeholder="JavaScript">
            </div>
          </div>
        </div>
      </div>

      <div class="field is-horizontal">
        <div class="field-label is-normal">
          <label class="label">Stakeholders</label>
        </div>
        <div class="field-body">
          <div class="field">
            <div class="control">
              <input value="<%= proyecto[0].stakeholders %>"class="input" type="text" placeholder="NatGas" id="stakeholders" name="stakeholders">
            </div>
          </div>
        </div>
      </div>

      <div class="field is-grouped is-grouped-centered">
        <p class="control">
          <input type="button" value="Modificar" id= "submitProyectobtn" class="button botonAgregarTarea3 is-success is-outlined"onclick="postEditarProyecto()">
          <button type="reset" class="button botonAgregarTarea2 is-danger is-outlined" onclick="window.location.href='/proyecto/misProyectos/';">Regresar</button>
        </p>
      </div>
    </form>
</div>
  <script src="/js/scriptEditarProyecto.js"></script>
  <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
  