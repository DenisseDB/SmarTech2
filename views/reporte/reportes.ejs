         <% } %>
   </select>

 </div>
</div>

</div>


<script>
  function handleReporteSelect(event)  {
    window.location = "/reporte/existente/" + event.target.value;
  }
  //al path le a√±ade el numero del proyecto, nombreP es una referencia al elemento que selecciona los datos
  document.getElementById("nombreR").addEventListener('change', handleReporteSelect);

  window.onload = function() {
        // Get the snackbar DIV
        var x = document.getElementById("snackbar");
        // Add the "show" class to DIV
        x.className = "show";
    // After 3 seconds, remove the show class from DIV
        setTimeout(function(){ x.className  = x.className.replace("show",""); }, 3000);
    };
    
</script>

<p class="control">
  <a href="/reporte/crearReporte"><input type="submit" value="Crear reporte"
  class="button btnCrearReporte is-info" id="btnCrearReporte"></a> 
</p>