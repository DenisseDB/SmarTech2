<div class="titulo">Reporte semanal NatDev</div>

            <div class="fechas_reporte">
                <div class = "row">
                    <div class="input-field is-normal">
                        <h6 id="fechaInicio">Fecha inicio: <%= reporteN[0].fechaInicio %></h6>
                        <h6 id="fechaFin">Fecha fin: <%= reporteN[0].fechaFinal %></h6>
                        <h6>Número reporte: 
                        <%= reporteN[0].noReporte %>
                        </h6>
                    </div>
                </div>
            </div>

            <div class="columns">
                <div class="column">
                    <div class="porcentajes">
                        <h6>Porcentaje: <%= reporteN[0].porcentaje %></h6> 
                        <h6>Verdadero porcentaje de eficiencia:</h6> 
                    </div>
                </div>
            </div>
                
    <div class="columns">
        <div class="column">
            <div class="inputs_reporte">
                <div class = "field is-horizontal"> 
                    <label class = "label">Personal de Medio Tiempo: <%= reporteN[0].personalMedioT %></label>                              
                </div>

                <div class="field is-horizontal">
                    <label class = "label">Personal de Tiempo Completo: <%= reporteN[0].personalCompletoT %></label>
                    <div class = "horasCompletoT" type = "number" id= "horasCompletoT"></div>                      
                </div>
                <div class="field is-horizontal">
                    <label class = "label">Total de personal</label>
                    <div type = "number" id= "totalPersonal" min = "0" value = "0"></div> 
                </div>
                <div class="field is-horizontal">
                    <label class = "label">Horas Esperadas</label>
                    <div type = "number" id= "horasEsperadas" min = "0" value = "0">0</div>
                </div>
                <div class="field is-horizontal">
                    <label class = "label">Horas de Vacaciones: <%= reporteN[0].horasVacaciones %></label>
                    
                </div>
                <div class="field is-horizontal">
                    <label class = "label">Descripcion: <%= reporteN[0].descripcion %></label>
                </div>
            </div>
        </div>
    </div>

    <table id="tabla_reporte">
        <thead>
        <tr>
            <th><abbr title="Proyecto">Proyecto</abbr></th>
            <th><abbr title="Tarea">Horas registradas</abbr></th>
            <th><abbr title="Horas">Horas reales</abbr></th>
        </tr>
        </thead>

        
        <tbody id="datos_tabla"> 
            <script>
                const nombreP = new Array();
            </script>       
            <% for (let h of horas) { %>
                <tr>
                    <td><%= h.nombreP %></td> 
                    <td><input id = "horasTrabajo['<%= h.nombreP %>']" type = "number" value="<%= h.horasTrabajo %>" readonly></td> 
                    <td><input value = "<%= h.horasTrabajo %>" type="number" id = "horasReales['<%= h.nombreP %>']" min = "0" placeholder="0" onkeyup="sumHoras()" onclick="sumHoras()"></td>
                </tr>
                <script>
                    nombreP.push("<%= h.nombreP %>");
                </script>
             <% } %>
            <tr>
                <td><b>TOTAL</b></td>
                <td id = "totalHorasTrabajo" type = "number" value = "0"></td>
                <td id = "totalHorasReales" type = "number"></td>
            </tr>
        </tbody>

        <!--Botón de guardar-->
        <input type="submit" id = "reportebtn" value = "Guardar" onclick="postNuevoReporte()">

        <script>
            const asyncFunc = () => {
                const fechaInicio = document.getElementById('fechaInicio').value;
                const fechaFinal = document.getElementById('fechaFinal').value
  
                //función que manda la petición asíncrona
                fetch('/reporte/buscar/' + fechaInicio + '/' + fechaFinal, {
                    method: 'GET',
                }).then(result => {
                    return result.json(); //Regresa otra promesa
                }).then(data => {
                    //Modificamos el DOM de nuestra página de acuerdo a los datos de la segunda promesa
                    console.log(data.fecha);
                    let html = '';
                    if (data.fecha.length > 0) {                 
                      for(let f of (data.fecha)) {
                        html += '<tr>';
                        html += '<td>'
                        html += `${f.nombreP}`;
                        html += '</td>'; 
                        html += '<td>';
                        html += `<input id = "horasTrabajo['${f.nombreP }']" type = "number" value="${f.horasReales}" readonly>`;
                        html += '</td>';
                        html += '<td>';
                        html += `<input value = "${f.horasReales}" type="number" id = "horasReales['${f.nombreP}']" min = "0" placeholder="0" onkeyup=${sumHoras()} onclick=${sumHoras()}">`;  
                        html += '</td>';
                        html += '</tr>';       
                      };      
                        html += '<tr>';
                        html += '<td>'; 
                        html += '<b>Total</b>';
                        html += '</td>';
                        html += '<td id = "totalHorasTrabajo" type = "number" value = "0">';
                        html += '</td>';
                        html += '<td id = "totalHorasReales" type = "number" value = "0">';
                        html += '</td>';
                        html += '</tr>';            
                    } else {
                        html = '<h2>No hay proyectos registrados en el periodo seleccionado.</h2>';
                    }
                    document.getElementById("datos_tabla").innerHTML = html;
                  
                }).catch(err => {
                    console.log(err);
                });
            };
    
            document.getElementById('fechaFinal').onloadstart = asyncFunc;
        </script>


<script src="/js/scriptReporte.js"></script>