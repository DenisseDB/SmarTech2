<%- include('../templates/head.ejs') %>

<!-- en action ponemos la ruta-->
<form action="/registrarTarea/nueva" method="POST">

<h1>Crear Tarea</h1>

<div class="field is-horizontal">
  <div class="field-label is-normal">
    <label class="label">Proyecto al que pertence</label>
  </div>
  <div class="field-body">
    <div class="field is-narrow">
      <div class="control">
        <div class="select is-fullwidth">
          <select name="nombreP" id="nombreP">
            <option value="" disabled selected>Escribe selecciona el proyecto</option>
                <% for (let p of proyecto) { %>
                    <option value="<%= p.nombreP %>"><%= p.nombreP %></option>
                <% } %>
          </select>
        </div>
      </div>
    </div>
  </div>
</div>


<div class="field is-horizontal">
  <div class="field-label is-normal">
    <label class="label">Nombre de tarea</label>
  </div>
  <div class="field-body">
    <div class="field">
      <div class="control">
        <input class="input is-danger" type="text" placeholder="Escribe aqui" id="nombreT" name="nombreT">
      </div>
      <p class="help is-danger">
        This field is required
      </p>
    </div>
  </div>
</div>

<div class="field is-horizontal">
  <div class="field-label is-normal">
    <label class="label">Colaboradores</label>
  </div>
  <div class="field-body">
    <div class="field">
      <div class="control">
        <input class="input" type="text" placeholder="Escribe aqui">
        <select name="nombre" id="nombre">
          <option value="" disabled selected>Juan Montoya</option>
              <% for (let e of empleado) { %>
                  <option value="<%= e.nombre, e.apellidoM, e.apellidoP %>"><%= e.nombre, e.apellidoM, e.apellidoP %></option>
              <% } %>
        </select>
      </div>
    </div>
  </div>
</div>



<div class="field is-horizontal">
  <div class="field-label is-normal">
    <label class="label">HORAS DE TRABAJO</label>
  </div>
  <div class="field-body">
    <div class="field">
      <div class="field has-addons">
        <p class="control">
          <input class="input" type="number" placeholder="1" id="horasTrabajo" name="horasRegistradas">
        </p>
        <p class="control">
          <a class="button is-static">
            horas
          </a>
        </p>
      </div>
    </div>
  </div>
</div>


<div class="field is-grouped is-grouped-centered">
  <p class="control">
    <input type="submit" value="Agregar">
  </p>
  <p class="control">
    <a class="button is-light">
      Cancelar
    </a>
  </p>
</div>
</div>
</form>